<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sugary.goertzpro"
          xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".scene.filterbar.MainActivity">
        </activity>
        <activity android:name=".scene.camera.MainActivity">

        </activity>
        <activity android:name=".scene.switcher.SwitcherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".scene.camera.GalleryActivity">
        </activity>
    </application>

</manifest>